<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="19dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".LecteurplayerActivity">

 <TextView
     android:android="@+id/tvTitle"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textColor="#fff"
     android:layout_marginTop="20dp"
     android:textSize="18sp"
     android:textStyle="bold"
     android:textAllCaps="true"
     tools:text="I have to lets Go"/>


  <TextView
      android:android="@+id/tvArtist"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="#fff"
      android:layout_marginTop="4dp"
      android:textSize="18sp"
      android:textAllCaps="true"
      tools:text="Locko"/>


 <ImageView
     android:layout_width="250dp"
     android:layout_height="250dp"
     android:layout_marginTop="30dp"
     android:background="@drawable/background_player"
     android:padding="24dp"
     android:src="@drawable/fich"
     app:tint="#fff" />

 <SeekBar
     android:android="@+id/seekBarTime"
     android:layout_marginTop="38dp"
     android:layout_width="300dp"
     android:thumbTint="#fff"
     android:backgroundTint="#777777"
     android:layout_height="wrap_content"/>

 <RelativeLayout
     android:layout_width="300dp"
     android:layout_height="wrap_content">

     <TextView
         android:android="@+id/tvTime"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="00:00"
         android:textColor="#fff"/>

     <TextView
         android:android="@+id/tvDuration"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="05:00"
         android:layout_alignParentEnd="true"
         android:textColor="#fff"/>


 </RelativeLayout>

    <Button
        android:android="@+id/btnPlay"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:contentDescription="Enter How Much Cookies You Want"
        android:background="@drawable/fichh"
        app:backgroundTint="#fff" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="25dp"
            android:layout_height="28dp"
            android:src="@drawable/bas"
            app:tint="#ffff" />

        <ImageView
            android:layout_width="620dp"
            android:layout_height="28dp"
            android:src="@drawable/bas"
            app:tint="#ffff"/>

    </LinearLayout>

    <SeekBar
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:android="@+id/seekBarVolume"
        android:backgroundTint="#777777"
        android:thumbTint="#fff" />

</LinearLayout>